---
interface Props {
  href: string
  size?: 'sm' | 'md' | 'lg'
  class?: string
}

const { href, size = 'lg', class: className = '' } = Astro.props

// Size variants matching original buttons
const sizeClasses = {
  sm: 'px-5 py-2.5 text-sm',
  md: 'px-8 py-5 text-lg',
  lg: 'px-10 py-5 text-lg',
}
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`app-store-badge inline-flex items-center gap-2.5 ${sizeClasses[size]} font-bold text-white rounded-lg bg-blue-600 hover:bg-blue-500 transition-all shadow-lg hover:shadow-blue-500/40 ${className}`}
>
  <!-- Download icon -->
  <svg
    class="w-5 h-5 flex-shrink-0"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2.5"
      d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
    />
  </svg>
  
  <!-- Text -->
  <span class="whitespace-nowrap">Download on the App Store</span>
</a>

