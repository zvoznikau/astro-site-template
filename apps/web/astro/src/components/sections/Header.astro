---
import { brand } from '../../config/brand'
import ThemeToggle from '../ui/ThemeToggle.astro'
---

<header class="sticky top-0 z-50 bg-transparent backdrop-blur-md border-b border-white/10">
  <nav class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl font-bold text-white hover:opacity-80 transition-opacity">
        {brand.name}
      </a>
      <div class="flex items-center gap-8">
        <!-- Desktop menu -->
        <div class="hidden md:flex items-center gap-8">
          {brand.navigation.items.slice(0, 3).map((item) => (
            <a
              href={item.href}
              class="text-sm font-medium text-white/70 hover:text-white transition-colors"
            >
              {item.label}
            </a>
          ))}
        </div>
        
        <!-- Mobile menu button -->
        <div class="dropdown dropdown-end md:hidden">
          <div tabindex="0" role="button" class="text-base-content/70">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 6h16M4 12h16M4 18h16"
              />
            </svg>
          </div>
          <ul
            tabindex="0"
            class="menu menu-sm dropdown-content mt-2 z-[1] p-2 bg-slate-900/95 backdrop-blur-md rounded-lg w-48 shadow-lg border border-white/10"
          >
            {brand.navigation.items.map((item) => (
              <li>
                <a href={item.href} class="text-sm font-medium">
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        
        <ThemeToggle />
        <a
          href={brand.urls.appStore}
          class="px-4 py-2 text-sm font-semibold text-white rounded-lg gradient-bg hover:opacity-90 transition-opacity shadow-md"
          target="_blank"
          rel="noopener noreferrer"
        >
          {brand.cta.primary}
        </a>
      </div>
    </div>
  </nav>
</header>

