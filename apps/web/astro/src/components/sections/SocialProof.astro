---
import { brand } from '../../config/brand'
---

<section
  id="social-proof"
  class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-20"
>
  <!-- Cards layout - same style as Features -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
    {brand.socialProof.map((proof) => (
      <div class="group p-6 rounded-xl card-block backdrop-blur-md transition-all shadow-xl hover:shadow-2xl flex flex-col h-full">
        <!-- Title with gradient accent -->
        <div class="mb-4">
          <h3 class="text-2xl font-bold mb-2">
            <span class="gradient-text">{proof.title}</span>
            <span class="text-base-content/40">.</span>
          </h3>
          <!-- Subtle accent line -->
          <div class="w-12 h-0.5 gradient-bg rounded-full opacity-60 group-hover:opacity-100 transition-opacity"></div>
        </div>
        <p class="text-base text-base-content/70 leading-relaxed flex-grow">{proof.description}</p>
      </div>
    ))}
  </div>
</section>
