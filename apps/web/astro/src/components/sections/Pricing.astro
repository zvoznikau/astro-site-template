---
import { brand } from '../../config/brand'
---

<section
  id="pricing"
  class="relative max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32"
>
  <!-- Background overlay to separate from main background -->
  <div class="absolute inset-0 bg-gradient-to-br from-purple-900/30 via-purple-800/20 to-blue-900/30 rounded-3xl -mx-4 sm:-mx-6 lg:-mx-8 backdrop-blur-sm"></div>
  <div class="relative z-10 space-y-20">
    <div class="text-center">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        <span class="gradient-text">Pricing</span>
      </h2>
      <p class="text-xl text-white/80 max-w-2xl mx-auto">
        Choose the plan that works for you.
      </p>
    </div>
    
    <!-- Two columns: Monthly | Yearly -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12 max-w-4xl mx-auto">
      <!-- Monthly Plan -->
      <div class="pricing-card p-8 rounded-2xl bg-gradient-to-br from-blue-500/10 via-cyan-500/10 to-blue-500/10 backdrop-blur-md border-2 border-cyan-400/30 card-shadow hover:border-cyan-400/60 transition-all shadow-xl hover:scale-105 hover:shadow-cyan-500/20 relative overflow-hidden group">
        <!-- Animated background glow -->
        <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/0 via-cyan-500/10 to-blue-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="space-y-6 relative z-10">
          <div>
            <h3 class="text-2xl font-bold text-white mb-2 pricing-title">Monthly</h3>
            <div class="flex items-baseline gap-2 pricing-price">
              <span class="text-5xl font-bold text-white">{brand.pricing.monthly.price}</span>
              <span class="text-lg text-white/60">/month</span>
            </div>
          </div>
          <p class="text-base text-white/70 pricing-desc">Perfect for trying out DemoAPPmax.</p>
          <a
            href={brand.urls.appStore}
            class="pricing-button inline-flex items-center justify-center w-full px-6 py-3 text-base font-semibold text-cyan-300 border-2 border-cyan-400/50 rounded-lg hover:border-cyan-400 hover:bg-cyan-400/10 hover:text-cyan-200 transition-all shadow-md hover:shadow-cyan-400/30 hover:scale-105"
            target="_blank"
            rel="noopener noreferrer"
          >
            {brand.cta.subscribe}
          </a>
        </div>
      </div>

      <!-- Yearly Plan (highlighted) - Premium colors: green/emerald for money/savings -->
      <div class="pricing-card pricing-card-featured p-8 rounded-2xl bg-gradient-to-br from-emerald-500/20 via-teal-500/20 to-cyan-500/20 backdrop-blur-md text-white card-shadow-lg relative overflow-hidden border-2 border-emerald-400/40 hover:scale-105 hover:shadow-emerald-500/30 transition-all group">
        <!-- Animated pulsing glow -->
        <div class="absolute inset-0 bg-gradient-to-br from-emerald-500/20 via-teal-500/20 to-cyan-500/20 animate-pulse-slow"></div>
        <!-- Shine effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
        <div class="absolute top-4 right-4">
          <span class="px-3 py-1 text-xs font-bold bg-emerald-500/30 text-emerald-200 rounded-full backdrop-blur-sm border border-emerald-400/50 animate-bounce-subtle">Best value</span>
        </div>
        <div class="space-y-6 relative z-10">
          <div>
            <h3 class="text-2xl font-bold mb-2 pricing-title">Yearly</h3>
            <div class="flex items-baseline gap-2 pricing-price">
              <span class="text-5xl font-bold">{brand.pricing.yearly.price}</span>
              <span class="text-lg opacity-90">/year</span>
            </div>
          </div>
          <p class="text-base opacity-90 pricing-desc">Save money with annual billing.</p>
          <a
            href={brand.urls.appStore}
            class="pricing-button inline-flex items-center justify-center w-full px-6 py-3 text-base font-semibold bg-gradient-to-r from-emerald-400 to-teal-400 text-white rounded-lg hover:from-emerald-300 hover:to-teal-300 transition-all shadow-lg hover:shadow-emerald-500/50 font-bold hover:scale-105"
            target="_blank"
            rel="noopener noreferrer"
          >
            {brand.cta.subscribe}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.6;
    }
  }
  
  @keyframes bounce-subtle {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }
  
  @keyframes price-glow {
    0%, 100% {
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    }
    50% {
      text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
    }
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 3s ease-in-out infinite;
  }
  
  .animate-bounce-subtle {
    animation: bounce-subtle 2s ease-in-out infinite;
  }
  
  .pricing-card {
    animation: card-float 6s ease-in-out infinite;
  }
  
  @keyframes card-float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }
  
  .pricing-card-featured {
    animation: card-float-featured 4s ease-in-out infinite;
  }
  
  @keyframes card-float-featured {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-8px) scale(1.01);
    }
  }
</style>

<script>
  // Animate pricing cards on scroll with enhanced effects
  function animatePricingCards() {
    const cards = document.querySelectorAll('.pricing-card');
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry, index) => {
          if (entry.isIntersecting) {
            setTimeout(() => {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0) scale(1)';
              
              // Animate inner elements with stagger
              const title = entry.target.querySelector('.pricing-title');
              const price = entry.target.querySelector('.pricing-price');
              const desc = entry.target.querySelector('.pricing-desc');
              const button = entry.target.querySelector('.pricing-button');
              
              if (title) {
                setTimeout(() => {
                  title.style.animation = 'fadeInUp 0.6s ease-out';
                }, 100);
              }
              if (price) {
                setTimeout(() => {
                  price.style.animation = 'fadeInUp 0.6s ease-out';
                  price.style.animationDelay = '0.1s';
                }, 200);
              }
              if (desc) {
                setTimeout(() => {
                  desc.style.animation = 'fadeInUp 0.6s ease-out';
                  desc.style.animationDelay = '0.2s';
                }, 300);
              }
              if (button) {
                setTimeout(() => {
                  button.style.animation = 'fadeInUp 0.6s ease-out';
                  button.style.animationDelay = '0.3s';
                }, 400);
              }
            }, index * 200); // Stagger animation
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );

    cards.forEach((card) => {
      card.style.opacity = '0';
      card.style.transform = 'translateY(50px) scale(0.95)';
      card.style.transition = 'opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1), transform 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
      observer.observe(card);
    });
  }
  
  // Add CSS for fadeInUp animation
  const style = document.createElement('style');
  style.textContent = `
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  `;
  document.head.appendChild(style);

  // Run on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', animatePricingCards);
  } else {
    animatePricingCards();
  }
</script>
