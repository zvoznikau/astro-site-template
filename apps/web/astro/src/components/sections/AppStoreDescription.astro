---
import { brand } from '../../config/brand'
---

<section
  id="app-store-description"
  class="relative max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32"
>
  <!-- Background overlay to highlight the block -->
  <div class="absolute inset-0 bg-gradient-to-br from-white/10 via-white/8 to-white/10 rounded-3xl -mx-4 sm:-mx-6 lg:-mx-8 backdrop-blur-sm"></div>
  <div class="relative z-10 max-w-4xl mx-auto">
    <!-- Compatibility icon -->
    <div class="flex items-center gap-2 mb-6">
      <svg
        class="w-6 h-6 text-base-content/70"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
        />
      </svg>
      <span class="text-sm font-medium text-base-content/70">{brand.product.platform}</span>
    </div>

    <!-- App Store description text -->
    <div class="space-y-4">
      <p class="text-base sm:text-lg text-base-content/80 leading-relaxed">
        {brand.product.appStoreDescription}
      </p>
    </div>

    <!-- Documentation link -->
    <div class="mt-8 pt-6 border-t border-base-content/10">
      <a
        href={brand.urls.documentation}
        class="inline-flex items-center gap-2 text-blue-400 hover:text-blue-300 transition-colors font-medium"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
          />
        </svg>
        Documentation
      </a>
    </div>
  </div>
</section>

