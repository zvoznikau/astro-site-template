---
import { brand } from '../../config/brand'
---

<section
  id="features"
  class="relative max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32"
>
  <div class="space-y-20">
    <div class="text-center">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        <span class="gradient-text">Features</span>
      </h2>
      <p class="text-xl text-base-content/80 max-w-2xl mx-auto">
        Everything you need to monitor your servers effectively.
      </p>
    </div>
    
    <!-- Grid of feature cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {brand.features.map((feature) => (
        <div class="p-6 rounded-xl card-block backdrop-blur-md transition-all shadow-xl hover:shadow-2xl flex flex-col h-full">
          <div class="flex items-center gap-3 mb-3">
            <!-- Icon -->
            <div class="flex-shrink-0 w-10 h-10 rounded-lg gradient-bg flex items-center justify-center">
              {feature.icon === 'cpu' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                </svg>
              )}
              {feature.icon === 'ram' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                </svg>
              )}
              {feature.icon === 'disk' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
                </svg>
              )}
              {feature.icon === 'network' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
              )}
              {feature.icon === 'alerts' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
              )}
              {feature.icon === 'history' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-base-content">{feature.title}</h3>
          </div>
          <p class="text-base text-base-content/70 leading-relaxed flex-grow">{feature.description}</p>
        </div>
      ))}
    </div>
    
    <!-- Supporting image slot (optional, subtle) -->
    {brand.images?.supporting?.features?.src && (
      <div class="mt-20">
        <img
          src={brand.images.supporting.features.src}
          alt={brand.images.supporting.features.alt || ''}
          class="w-full h-auto rounded-2xl opacity-80"
          loading="lazy"
        />
      </div>
    )}
  </div>
</section>
