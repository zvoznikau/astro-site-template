---
import { brand } from '../../config/brand'
---

<section
  id="how-it-works"
  class="relative max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32"
>
  <div class="space-y-20">
    <div class="text-center">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        <span class="gradient-text">How it works</span>
      </h2>
      <p class="text-xl text-base-content/80 max-w-2xl mx-auto">
        Get started in three simple steps.
      </p>
    </div>
    
    <!-- 3 blocks in a row on desktop, vertical on mobile -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
      {brand.howItWorks.map((step, index) => (
        <div class="relative flex flex-col h-full">
          <div class="absolute -top-4 left-1/2 -translate-x-1/2 md:left-0 md:translate-x-0 md:-left-4 w-12 h-12 rounded-full gradient-bg flex items-center justify-center text-white font-bold text-lg shadow-lg z-10">
            {index + 1}
          </div>
          <div class="pt-8 p-6 rounded-xl card-block backdrop-blur-md shadow-xl hover:shadow-2xl transition-all flex flex-col h-full">
            <h3 class="text-2xl font-bold text-base-content mb-4">{step.title}</h3>
            <p class="text-base text-base-content/70 leading-relaxed flex-grow">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
