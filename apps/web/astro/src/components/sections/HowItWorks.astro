---
import { brand } from '../../config/brand'
---

<section
  id="how-it-works"
  class="relative max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32"
>
  <div class="space-y-20">
    <div class="text-center">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        <span class="gradient-text">How it works</span>
      </h2>
      <p class="text-xl text-base-content/80 max-w-2xl mx-auto">
        Get started in three simple steps.
      </p>
    </div>
    
    <!-- 3 blocks in a row on desktop, vertical on mobile -->
    <div class="relative">
      <!-- Connecting line on desktop - from center of first circle to center of third circle -->
      <div class="hidden md:block absolute top-24 h-1 bg-gradient-to-r from-purple-400/60 via-purple-500/80 to-purple-400/60 rounded-full connecting-line overflow-visible" style="left: calc(16.67% - 0.5px); width: calc(66.66% + 1px);">
        <!-- Animated spark/charge moving along the line -->
        <div class="spark-dot"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12 relative">
        {brand.howItWorks.map((step, index) => (
          <div class="flex flex-col h-full relative">
            <!-- Large number background -->
            <div class="absolute -top-6 left-1/2 -translate-x-1/2 md:left-1/2 md:-translate-x-1/2 w-16 h-16 rounded-full gradient-bg flex items-center justify-center text-white font-bold text-2xl shadow-2xl z-20 border-4 border-base-100">
              {index + 1}
            </div>
            
            <div class="pt-10 p-6 rounded-xl card-block backdrop-blur-md shadow-xl hover:shadow-2xl hover:scale-105 transition-all flex flex-col h-full text-center">
              <h3 class="text-2xl font-bold text-base-content mb-4 mt-6">{step.title}</h3>
              <p class="text-base text-base-content/70 leading-relaxed flex-grow">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes spark-move {
    0% {
      left: 0%;
      opacity: 0;
    }
    5% {
      opacity: 1;
    }
    95% {
      opacity: 1;
      left: calc(100% - 6px);
    }
    100% {
      left: calc(100% - 6px);
      opacity: 0;
    }
  }
  
  @keyframes spark-glow {
    0%, 100% {
      box-shadow: 0 0 8px rgba(168, 85, 247, 0.8), 0 0 16px rgba(168, 85, 247, 0.6);
    }
    50% {
      box-shadow: 0 0 16px rgba(168, 85, 247, 1), 0 0 32px rgba(168, 85, 247, 0.8), 0 0 48px rgba(168, 85, 247, 0.4);
    }
  }
  
  .connecting-line {
    position: relative;
  }
  
  .spark-dot {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(-50%, -50%);
    width: 12px;
    height: 12px;
    background: linear-gradient(135deg, rgba(196, 181, 253, 1), rgba(168, 85, 247, 1));
    border-radius: 50%;
    animation: spark-move 3s ease-in-out infinite, spark-glow 1.5s ease-in-out infinite;
  }
</style>
