<section
  id="how-it-works"
  class="relative max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32"
>
  <div class="space-y-20">
    <div class="text-center">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        <span class="gradient-text">How it works</span>
      </h2>
      <p class="text-xl text-base-content/80 max-w-2xl mx-auto">
        Get started in three simple steps.
      </p>
    </div>
    
    <!-- 3 blocks in a row on desktop, vertical on mobile -->
    <div class="relative">
      <!-- Connecting line on desktop - from center of first circle to center of third circle -->
      <div class="hidden md:block absolute top-24 h-1 bg-gradient-to-r from-purple-400/60 via-purple-500/80 to-purple-400/60 rounded-full connecting-line overflow-visible" style="left: calc(16.67% - 0.5px); width: calc(66.66% + 1px);">
        <!-- Animated spark/charge moving along the line -->
        <div class="spark-dot"></div>
        <!-- Explosion effect at the end -->
        <div class="explosion">
          <div class="explosion-particle particle-1"></div>
          <div class="explosion-particle particle-2"></div>
          <div class="explosion-particle particle-3"></div>
          <div class="explosion-particle particle-4"></div>
          <div class="explosion-particle particle-5"></div>
          <div class="explosion-particle particle-6"></div>
          <div class="explosion-particle particle-7"></div>
          <div class="explosion-particle particle-8"></div>
          <div class="explosion-particle particle-9"></div>
          <div class="explosion-particle particle-10"></div>
          <div class="explosion-particle particle-11"></div>
          <div class="explosion-particle particle-12"></div>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-16 md:gap-8 lg:gap-12 relative">
        <!-- Connecting line on mobile - vertical from middle of first card to middle of third card -->
        <div class="md:hidden absolute left-1/2 -translate-x-1/2 w-1.5 bg-gradient-to-b from-purple-400/70 via-purple-500/90 to-purple-400/70 rounded-full connecting-line-mobile overflow-visible z-0" style="top: 80px; bottom: 80px;">
          <!-- Animated spark/charge moving along the line -->
          <div class="spark-dot-mobile"></div>
          <!-- Explosion effect at the end -->
          <div class="explosion-mobile">
            <div class="explosion-particle-mobile particle-mobile-1"></div>
            <div class="explosion-particle-mobile particle-mobile-2"></div>
            <div class="explosion-particle-mobile particle-mobile-3"></div>
            <div class="explosion-particle-mobile particle-mobile-4"></div>
            <div class="explosion-particle-mobile particle-mobile-5"></div>
            <div class="explosion-particle-mobile particle-mobile-6"></div>
            <div class="explosion-particle-mobile particle-mobile-7"></div>
            <div class="explosion-particle-mobile particle-mobile-8"></div>
            <div class="explosion-particle-mobile particle-mobile-9"></div>
            <div class="explosion-particle-mobile particle-mobile-10"></div>
            <div class="explosion-particle-mobile particle-mobile-11"></div>
            <div class="explosion-particle-mobile particle-mobile-12"></div>
          </div>
        </div>
        {brand.howItWorks.map((step, index) => (
          <div class="flex flex-col h-full relative">
            <!-- Large number background -->
            <div class="absolute -top-6 left-1/2 -translate-x-1/2 md:left-1/2 md:-translate-x-1/2 w-16 h-16 rounded-full gradient-bg flex items-center justify-center text-white font-bold text-2xl shadow-2xl z-20 border-4 border-base-100">
