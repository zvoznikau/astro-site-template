---
import { brand } from '../../config/brand'
import AppStoreBadge from '../ui/AppStoreBadge.astro'
---

<section
  id="hero"
  class="relative max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-40"
>
  <div class="relative z-10">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 lg:gap-20 items-center">
    <!-- TEXT ZONE -->
    <div class="space-y-6 sm:space-y-8 lg:space-y-10 order-2 lg:order-1 text-center sm:text-left">
      <h1 class="text-4xl sm:text-5xl lg:text-7xl xl:text-8xl font-bold leading-[1.1] tracking-tight">
        <span class="gradient-text">{brand.product.valueProposition.split('.')[0]}.</span>
        <span class="text-base-content block mt-2">
          {brand.product.valueProposition.split('.').slice(1).join('.')}
        </span>
      </h1>
      <p class="text-lg sm:text-xl lg:text-3xl text-base-content/80 leading-relaxed max-w-2xl mx-auto sm:mx-0">
        {brand.product.secondaryLine}
      </p>
      <div class="pt-4 sm:pt-6 flex flex-col items-center sm:flex-row sm:items-start gap-3 sm:gap-4">
        <AppStoreBadge href={brand.urls.appStore} size="md" class="mobile-cta-button" />
        <a
          href="#pricing"
          class="inline-flex items-center justify-center px-8 py-5 text-lg font-bold text-base-content border border-base-content/50 rounded-lg hover:border-base-content hover:bg-base-content/10 transition-all duration-200 shadow-md hover:-translate-y-0.5 active:translate-y-0 mobile-cta-button"
        >
          View pricing
        </a>
      </div>
    </div>
    
    <!-- IMG ZONE -->
    {brand.images?.hero && brand.images.hero.src ? (
      <div class="order-1 lg:order-2 mt-0 lg:mt-0 lg:-mr-4 sm:-mr-6 lg:-mr-8">
        <div class="relative pl-0 sm:pl-4 lg:pl-8 pt-0 sm:pt-4 lg:pt-8 pb-0 sm:pb-4 lg:pb-8">
          <!-- Carousel container -->
          <div class="carousel-container relative overflow-hidden rounded-2xl sm:rounded-3xl mobile-carousel-container">
            <div class="carousel-track flex transition-transform duration-500 ease-in-out" id="carousel-track">
              <!-- Clone of last slide (for infinite loop) -->
              <div class="carousel-slide carousel-clone min-w-full flex-shrink-0 p-1 sm:p-2 transition-transform duration-500 ease-in-out">
                <img
                  src={brand.images.hero.src}
                  alt={`${brand.images.hero.alt || ''} - Clone`}
                  class="w-full h-auto rounded-2xl sm:rounded-3xl max-w-full max-h-[600px] sm:max-h-[500px] lg:max-h-[700px] object-contain mobile-carousel-image"
                  loading="lazy"
                />
              </div>
              <!-- 5 identical images -->
              {Array.from({ length: 5 }).map((_, index) => (
                <div class="carousel-slide min-w-full flex-shrink-0 p-1 sm:p-2 transition-transform duration-500 ease-in-out">
                  <img
                    src={brand.images.hero.src}
                    alt={`${brand.images.hero.alt || ''} - Slide ${index + 1}`}
                    class="w-full h-auto rounded-2xl sm:rounded-3xl max-w-full max-h-[600px] sm:max-h-[500px] lg:max-h-[700px] object-contain mobile-carousel-image"
                    loading={index === 0 ? "eager" : "lazy"}
                  />
                </div>
              ))}
              <!-- Clone of first slide (for infinite loop) -->
              <div class="carousel-slide carousel-clone min-w-full flex-shrink-0 p-1 sm:p-2 transition-transform duration-500 ease-in-out">
                <img
                  src={brand.images.hero.src}
                  alt={`${brand.images.hero.alt || ''} - Clone`}
                  class="w-full h-auto rounded-2xl sm:rounded-3xl max-w-full max-h-[600px] sm:max-h-[500px] lg:max-h-[700px] object-contain mobile-carousel-image"
                  loading="lazy"
                />
              </div>
            </div>
            
            <!-- Navigation arrows - hidden on mobile, visible on tablet+ -->
            <button
              class="carousel-prev hidden sm:flex absolute left-2 sm:left-4 top-1/2 -translate-y-1/2 bg-base-100/80 hover:bg-base-100 rounded-full p-2 shadow-lg transition-all z-10"
              aria-label="Previous slide"
            >
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <button
              class="carousel-next hidden sm:flex absolute right-2 sm:right-4 top-1/2 -translate-y-1/2 bg-base-100/80 hover:bg-base-100 rounded-full p-2 shadow-lg transition-all z-10"
              aria-label="Next slide"
            >
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
            
            <!-- Dots indicator -->
            <div class="absolute bottom-2 sm:bottom-4 left-1/2 -translate-x-1/2 flex gap-2 z-10">
              {Array.from({ length: 5 }).map((_, index) => (
                <button
                  class={`carousel-dot w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full transition-all ${
                    index === 0 
                      ? 'bg-gray-900 dark:bg-white' 
                      : 'bg-gray-900/40 dark:bg-white/40'
                  }`}
                  data-slide={index}
                  aria-label={`Go to slide ${index + 1}`}
                />
              ))}
            </div>
          </div>
        </div>
      </div>
    ) : (
      <!-- Placeholder -->
      <div class="order-1 lg:order-2 mt-0 lg:mt-0 aspect-video rounded-2xl sm:rounded-2xl flex items-center justify-center border-2 border-dashed border-base-content/20">
        <div class="text-base-content/30 text-base sm:text-lg font-medium">Hero Image</div>
      </div>
    )}
  </div>
  </div>
</section>

<style>
  .carousel-slide {
    transform-origin: center center;
  }
  
  /* Mobile carousel - show only top half of images, larger size */
  @media (max-width: 640px) {
    .mobile-carousel-container {
      height: 400px;
      overflow: hidden;
      position: relative;
    }
    
    .mobile-carousel-container .carousel-track {
      align-items: flex-start;
    }
    
    .mobile-carousel-image {
      object-position: top center;
      width: 100%;
      height: 800px;
      object-fit: cover;
      margin-top: 0;
    }
    
    .mobile-carousel-container .carousel-slide {
      display: flex;
      align-items: flex-start;
      overflow: hidden;
      height: 100%;
    }
    
    /* Mobile CTA buttons - centered and smaller */
    .mobile-cta-button {
      width: auto;
      transform: scale(0.85);
    }
  }
</style>

<script>
  // Carousel functionality with infinite loop and auto-play
  (function initCarousel() {
    const track = document.getElementById('carousel-track');
    const prevBtn = document.querySelector('.carousel-prev');
    const nextBtn = document.querySelector('.carousel-next');
    const dots = document.querySelectorAll('.carousel-dot');
    const container = document.querySelector('.carousel-container');
    
    if (!track || !prevBtn || !nextBtn || dots.length === 0 || !container) return;
    
    const totalSlides = 5;
    // Start at position 1 (first real slide, after clone)
    let currentSlide = 1;
    let autoPlayInterval = null;
    const autoPlayDelay = 3000; // 3 seconds
    let isTransitioning = false;
    
    // Update carousel position and scale
    function updateCarousel(skipTransition = false) {
      if (skipTransition) {
        track.style.transition = 'none';
      } else {
        track.style.transition = 'transform 0.5s ease-in-out';
      }
      
      track.style.transform = `translateX(-${currentSlide * 100}%)`;
      
      // Force reflow to apply transition
      if (skipTransition) {
        void track.offsetWidth;
        track.style.transition = 'transform 0.5s ease-in-out';
      }
      
      // Update scale for each slide based on distance from center
      const slides = track.querySelectorAll('.carousel-slide');
      slides.forEach((slide, index) => {
        const distance = Math.abs(index - currentSlide);
        let scale = 1;
        
        if (distance === 0) {
          // Center slide - full size
          scale = 1;
        } else if (distance === 1) {
          // Adjacent slides - smaller (symmetric left/right)
          scale = 0.65;
        } else {
          // Further slides - much smaller (symmetric left/right)
          scale = 0.4;
        }
        
        if (skipTransition) {
          slide.style.transition = 'none';
        } else {
          slide.style.transition = 'transform 0.5s ease-in-out';
        }
        
        slide.style.transform = `scale(${scale})`;
        
        if (skipTransition) {
          void slide.offsetWidth;
          slide.style.transition = 'transform 0.5s ease-in-out';
        }
      });
      
      // Update dots (map to real slide index)
      const realSlideIndex = currentSlide === 0 ? totalSlides - 1 : 
                            currentSlide > totalSlides ? 0 : 
                            currentSlide - 1;
      
      dots.forEach((dot, index) => {
        if (index === realSlideIndex) {
          dot.classList.remove('bg-gray-900/40', 'dark:bg-white/40');
          dot.classList.add('bg-gray-900', 'dark:bg-white');
        } else {
          dot.classList.remove('bg-gray-900', 'dark:bg-white');
          dot.classList.add('bg-gray-900/40', 'dark:bg-white/40');
        }
      });
    }
    
    // Go to specific slide
    function goToSlide(slideIndex) {
      currentSlide = slideIndex + 1; // +1 because first slide is clone
      updateCarousel();
      resetAutoPlay();
    }
    
    // Next slide (infinite loop)
    function nextSlide() {
      if (isTransitioning) return;
      isTransitioning = true;
      
      currentSlide++;
      
      // If we reached the clone of first slide, animate to it, then jump to real first slide
      if (currentSlide > totalSlides) {
        // Animate to clone with transition
        updateCarousel(false);
        // After animation completes, jump to real first slide without transition
        setTimeout(() => {
          currentSlide = 1;
          updateCarousel(true);
          isTransitioning = false;
        }, 500);
      } else {
        updateCarousel();
        setTimeout(() => {
          isTransitioning = false;
        }, 500);
      }
    }
    
    // Previous slide (infinite loop)
    function prevSlide() {
      if (isTransitioning) return;
      isTransitioning = true;
      
      currentSlide--;
      
      // If we reached the clone of last slide, animate to it, then jump to real last slide
      if (currentSlide < 1) {
        // Animate to clone with transition
        updateCarousel(false);
        // After animation completes, jump to real last slide without transition
        setTimeout(() => {
          currentSlide = totalSlides;
          updateCarousel(true);
          isTransitioning = false;
        }, 500);
      } else {
        updateCarousel();
        setTimeout(() => {
          isTransitioning = false;
        }, 500);
      }
    }
    
    // Start auto-play
    function startAutoPlay() {
      if (autoPlayInterval) return;
      autoPlayInterval = setInterval(nextSlide, autoPlayDelay);
    }
    
    // Stop auto-play
    function stopAutoPlay() {
      if (autoPlayInterval) {
        clearInterval(autoPlayInterval);
        autoPlayInterval = null;
      }
    }
    
    // Reset auto-play (restart timer)
    function resetAutoPlay() {
      stopAutoPlay();
      startAutoPlay();
    }
    
    // Event listeners
    nextBtn.addEventListener('click', () => {
      nextSlide();
      resetAutoPlay();
    });
    
    prevBtn.addEventListener('click', () => {
      prevSlide();
      resetAutoPlay();
    });
    
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        goToSlide(index);
        resetAutoPlay();
      });
    });
    
    // Pause on hover, resume on leave
    container.addEventListener('mouseenter', stopAutoPlay);
    container.addEventListener('mouseleave', startAutoPlay);
    
    // Initialize position
    updateCarousel(true);
    
    // Start auto-play on load
    startAutoPlay();
  })();
</script>
